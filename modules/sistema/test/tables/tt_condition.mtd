<!DOCTYPE TMD>
<TMD>
	<name>tt_condition</name>
	<alias>QT_TRANSLATE_NOOP("MetaData","Condición")</alias>
	<!--Condición-->

	<field>
		<name>id</name>
		<!--Identificador interno de la tabla-->
		<alias>QT_TRANSLATE_NOOP("MetaData","Identificador")</alias>
		<null>false</null>
		<pk>true</pk>
		<type>serial</type>
	</field>
	
	<field>
		<name>event</name>
		<!--Evento-->
		<alias>QT_TRANSLATE_NOOP("MetaData","Evento")</alias>
		<null>true</null>
		<pk>false</pk>
		<type>string</type>
		<length>15</length>
		<optionslist>NO_CONDITION,FORM_READY,FORM_CLOSED,FORM_RECORD_READY,FORM_SEARCH_READY,FIELD_READY,MESSAGE_BOX_READY,MESSAGE_BOX_CLOSED,RECORD_DELETED,SCRIPT_FINISHED</optionslist>
		<default>SCRIPT_FINISHED</default>
	</field>
	
	<field>
		<name>object</name>
		<!--Object-->
		<alias>QT_TRANSLATE_NOOP("MetaData","Object")</alias>
		<null>true</null>
		<pk>false</pk>
		<type>string</type>
		<length>50</length>
	</field>
	
	<field>
		<name>xml</name>
		<!--Nodo XML que almacena la información de la condicion-->
		<alias>QT_TRANSLATE_NOOP("MetaData","xml")</alias>
		<null>false</null>
		<pk>false</pk>
		<type>stringlist</type>
	</field>
</TMD>

