<!DOCTYPE TMD>
<TMD>
	<name>tt_action</name>
	<alias>QT_TRANSLATE_NOOP("MetaData","Acción")</alias>
	<!--Acciones que pueden realizarse para cada tipo de objeto-->

	<field>
		<name>idaction</name>
		<alias>QT_TRANSLATE_NOOP("MetaData","Identificador")</alias>
		<!--Identificador de la acción-->
		<null>false</null>
		<pk>true</pk>
		<type>string</type>
		<length>50</length>

		<relation>
			<table>tt_stepcat</table>
			<field>idaction</field>
			<card>1M</card>
		</relation>

	</field>

	<field>
		<name>idobjecttype</name>
		<alias>QT_TRANSLATE_NOOP("MetaData","Tipo de objeto")</alias>
		<!--Tipo del objeto al que está asociada la acción-->
		<null>false</null>
		<pk>false</pk>
		<type>string</type>
		<length>50</length>

		<relation>
			<table>tt_objecttype</table>
			<field>idobjecttype</field>
			<card>M1</card>
		</relation>
		
	</field>

	<field>
		<name>description</name>
		<!--Descripción de la acción-->
		<alias>QT_TRANSLATE_NOOP("MetaData","Descripción")</alias>
		<null>false</null>
		<pk>false</pk>
		<type>string</type>
		<length>200</length>
	</field>

	<field>
		<name>isdefault</name>
		<alias>QT_TRANSLATE_NOOP("MetaData","Valor por defecto")</alias>
		<!--Indica si es la acción por defecto del tipo de objeto al que está asociada-->
		<null>false</null>
		<pk>false</pk>
		<type>bool</type>
		<default>false</default>
	</field>

</TMD>

