<!DOCTYPE TMD>
<TMD>
	<name>mv_areas</name>
	<alias>QT_TRANSLATE_NOOP("MetaData","Áreas")</alias>

	<field>
		<name>idarea</name>
		<!-- Identificador del área -->
		<alias>QT_TRANSLATE_NOOP("MetaData","Identificador")</alias>
		<null>false</null>
		<pk>true</pk>
		<type>string</type>
		<length>3</length>

		<relation>
			<table>mv_modulos</table>
			<field>idarea</field>
			<card>1M</card>
		</relation>
	</field>
	
	<field>
		<name>idseccion</name>
		<!-- Identificador de la sección -->
		<alias>QT_TRANSLATE_NOOP("MetaData","Sección")</alias>
		<null>false</null>
		<pk>false</pk>
		<type>string</type>
		<length>10</length>
		
		<relation>
			<table>mv_secciones</table>
			<field>idseccion</field>
			<card>M1</card>
		</relation>
	</field>

	<field>
		<name>descripcion</name>
		<!-- Descripción del área -->
		<alias>QT_TRANSLATE_NOOP("MetaData","Descripción")</alias>
		<null>true</null>
		<pk>false</pk>
		<type>string</type>
		<length>200</length>
	</field>
	
	<field>
		<name>directorio</name>
		<!-- Nombre del directorio-->
		<alias>QT_TRANSLATE_NOOP("MetaData","Directorio")</alias>
		<null>false</null>
		<pk>false</pk>
		<type>string</type>
		<length>15</length>
	</field>

</TMD>